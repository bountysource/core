<!doctype html>
<html ng-app="app">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title ng-bind="(title ? title + ' - ' : '') + 'Salt - Bountysource'"><% if @team && @support_offering %>Support <%=h @team.name%>: <%=h @support_offering.subtitle%><% else %>Salt - Bountysource<% end %></title>
  <base href="/">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
  <link rel="icon" href="favicon.ico?v=3">
  <link rel="shortcut icon" href="favicon.ico?v=3">
  <link rel="apple-touch-icon" href="https://cloudinary-a.akamaihd.net/bountysource/image/upload/d_noaoqqwxegvmulwus0un.png,c_pad,w_200,h_200/apple-icon-180x180_sojlfw.png">
  <link rel="chrome-webstore-item" href="https://chrome.google.com/webstore/detail/gbglnjeiihigninohoiomjamaapnighb">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-loading-bar/0.7.1/loading-bar.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700" rel="stylesheet">
  <%= stylesheet_link_tag "salt" %>

  <% if @team && @support_offering %>
    <meta name="description" content="<%=h @support_offering.subtitle%>" />
    <meta name="twitter:card" content="product" />
    <meta name="twitter:site" content="@Bountysource" />
    <meta name="twitter:title" content="Support <%=h @team.name%> on Bountysource" />
    <meta name="twitter:description" content="<%=h @support_offering.subtitle%>" />
    <meta name="twitter:image:src" content="<%=@team.large_image_url%>" />
    <meta name="twitter:data1" content="<%=number_to_currency(@team.monthly_contributions_sum||0, precision: 0)%>" />
    <meta name="twitter:label1" content="RECEIVING PER MONTH" />
    <meta name="twitter:data2" content="<%=number_to_currency(@support_offering.next_goal, precision: 0)%>" />
    <meta name="twitter:label2" content="GOAL" />
    <meta property="og:title" content="Support <%=h @team.name%> on Bountysource" />
    <meta property="og:image" content="<%=@team.large_image_url%>" />
    <meta property="og:url" content="https://salt.bountysource.com/teams/<%=@team.slug%>" />
    <meta property="og:description" content="<%=h @support_offering.subtitle%>" />
    <meta property="og:site_name" content="Bountysource" />
  <% end %>

</head>
<body ng-class="body_class">
  <noscript>
    <h3 class="text-center">Javascript Required. Kindly enable Javascript.</h3>
  </noscript>

  <% if @team && @support_offering %>
    <div style="display:none">
      <h1><%=@team.name%></h1>
      <h2><%=@support_offering.subtitle%></h2>
      <p><%=sanitize(strip_tags(raw(@support_offering.body_markdown)))%></p>
    </div>
  <% end %>

  <ui-view/>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.28/angular.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.28/angular-resource.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.28/angular-sanitize.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.1/ui-bootstrap-tpls.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.13/angular-ui-router.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-loading-bar/0.7.1/loading-bar.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/showdown/0.4.0/Showdown.min.js"></script>

  <script type="text/javascript" src="https://checkout.stripe.com/checkout.js"></script>

  <script type="text/javascript" src="https://www.google.com/jsapi"></script>
  <script type="text/javascript">if (window.google) google.load('visualization', '1.0', {'packages':['corechart']});</script>

  <%= render "layouts/env" %>
  <%= javascript_include_tag "salt" %>

</body>
</html>
