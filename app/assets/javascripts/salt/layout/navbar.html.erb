<div class="navbar navbar-default navbar-static-top navbar-bountysource" role="navigation" ng-controller="NavbarController">
  <div ng-class="{ container: nav_container, 'container-fluid': !nav_container }">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" ng-click="isCollapsed = !isCollapsed"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
      <a class="navbar-brand" href="/" style="padding-top: 10px; padding-bottom: 10px;">
        <img src='<%= asset_path("Bountysource-green.png") %>' style="max-height: 45px; max-width: 120px; display: inline"/>
        <span style="font-size: 24px; margin-left: 6px; margin-top:5px; font-weight: 100">(salt)</span>
      </a>
    </div>

    <div class="collapse navbar-collapse" collapse="!isCollapsed">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <div class="navbar-btn">
            <a class="btn btn-hover-green" ng-href="https://kiwiirc.com/client/chat.freenode.net:+6697/#bountysource" target="_blank"><span class="glyphicon glyphicon-comment"></span> IRC Chat</a>
          </div>
        </li>
        <li>
          <div class="navbar-btn">
            <a class="btn btn-hover-green" href="https://github.com/bountysource/frontend/wiki/Salt-Frequently-Asked-Questions" target="_blank"><span class="glyphicon glyphicon-question-sign"></span> FAQ</a>
          </div>
        </li>

        <!-- User dropdown if logged in -->
        <li class="dropdown" ng-show="person.id" dropdown>
          <a href="#" class="dropdown-toggle" dropdown-toggle>
            <img class="img-rounded" ng-src="{{person.image_url_small}}" style="height: 20px; width: 20px; margin-top: -2px" />
            {{person.display_name}}
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><a ui-sref="root.settings.support_levels"><i class="glyphicon glyphicon-cog"></i> Manage Payments</a></li>
            <li><a ng-click="logout()"><i class="glyphicon glyphicon-off"></i> Log Out</a></li>
          </ul>
        </li>

        <!-- Sign in dropdown if not logged in -->
        <li ng-hide="person.id" dropdown>
          <div class="navbar-btn">
            <a class="btn btn-success" ui-sref="root.session.signup" ui-sref-opts="{ inherit: false }"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
          </div>
        </li>
        <li ng-hide="person.id" dropdown>
          <div class="navbar-btn">
            <a class="btn btn-hover-green" ui-sref="root.session.login" ui-sref-opts="{ inherit: false }"><span class="glyphicon glyphicon-log-in" style="margin-right:3px"></span> Log In</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
