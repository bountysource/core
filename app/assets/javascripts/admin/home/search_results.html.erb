<h1>Search Results</h1>
<div class="alert alert-info" ng-hide="results_found"><h2>Loading....</h2><img ng-src='<%= asset_path("ajax-loader.gif") %>'></img></div>
<div ng-show="results_found">
  <div class="row-fluid">
    <div class="span12" style="border: 1px solid #ddd; border-radius: 10px; padding:15px;">

      <div>
        <h3>People</h3>
        <table class="table table-condensed table-striped table-bordered" style="margin-top:15px;">
          <thead>
            <tr>
              <th>Display Name</th>
              <th>Email</th>
              <th>GitHub User</th>
              <th>Signup Date</th>
              <th>Last Seen At</th>
              <th>Last Modified</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="person in people">
              <td><a ng-href="/admin/people/{{ person.id }}">{{person.display_name}}</a></td>
              <td><a ng-href="mailto:{{ person.email }}">{{ person.public_email }}</a></td>
              <td><a ng-href="https://github.com/{{ person.github_account.login }}" target="_blank">{{ person.github_account.login }}</a></td>
              <td>{{ person.created_at | date:'short' }}</td>
              <td>{{ person.last_seen_at | date:'short' }}</td>
              <td>{{ person.updated_at | date:'short' }}</td>
            </tr>
          </tbody>
        </table>
      </div>

      <div>
        <h3>Bounties</h3>
        <table class="table table-condensed table-striped table-bordered" style="margin-top:15px;">
          <thead>
            <tr>
              <th>ID</th>
              <th>Issue</th>
              <th>Repository</th>
              <th>Amount</th>
              <th>Backer</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="bounty in bounties">
              <td><a ng-href="/admin/bounties/{{bounty.id}}">{{bounty.id}}</a></td>
              <td><a ng-href="/admin/issues/{{ bounty.issue.id }}">{{bounty.issue.title}}</a></td>
              <td><a ng-href="{{ bounty.repository.url }}" target="_blank">{{ bounty.repository.full_name }}</a></td>
              <td>{{bounty.amount | currency}}</td>
              <td><a ng-href="/admin/people/{{ bounty.person.id }}">{{ bounty.person.display_name }}</a></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div>
        <h3>Fundraisers</h3>
        <table class="table table-condensed table-striped table-bordered" style="margin-top:15px;">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Featured</th>
              <th>Published</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="fundraiser in fundraisers">
              <td><a ng-href="/admin/fundraisers/{{fundraiser.id}}">{{fundraiser.title}}</a></td>
              <td><a ng-href="/admin/people/{{ fundraiser.person.id }}">{{fundraiser.person.display_name}}</a></td>
              <td><i class="icon-ok" ng-show="{{ fundraiser.featured }}"></i></td>
              <td><i class="icon-ok" ng-show="{{ fundraiser.published }}"></i></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div>
        <h3>Trackers</h3>
        <table class="table table-condensed table-striped table-bordered" style="margin-top:15px;">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="tracker in trackers">
              <td><a ng-href="/admin/trackers/{{tracker.id}}">{{tracker.name}}</a></td>
              <td>{{tracker.description}}</td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
<div ng-show="error">{{ error }}</div>
