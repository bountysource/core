<div class="issue-card">
  <div class="issue-body row">
    <div class="col-sm-2 col-xs-12 tracker-info">
      <a ng-href="/trackers/{{ issue.tracker.slxug }}" class="tracker-image-container">
        <img class="tracker-image" ng-src="{{ issue.tracker.image_url }}" alt="" />
      </a>
      <a ng-href="/trackers/{{ issue.tracker.slug }}" class="tracker-name">{{ issue.tracker.name }}</a>
    </div>

    <div class="col-sm-10 col-xs-12 issue-info">
      <h4 class="issue-title">
        <a ng-href="/issues/{{ issue.slug }}">
          <strong>{{ issue.title }}</strong>
        </a>
      </h4>

      <div class="issue-caption issue-spacing-top">
        <i class="glyphicon glyphicon-user"></i>
        <span class="issue-author">
          Posted by: <a ng-if="issue.author.slug" ng-href="{{ issue.author.slug }}">
            {{ issue.author.display_name }}
          </a>
          <span ng-if="issue.author.slug === undefined">
            {{ issue.author.display_name }}
          </span>
        </span>
        <span class="issue-created-at">
          <i class="glyphicon glyphicon-edit"></i>
          {{ issue.created_at | timeDiff }} ago
        </span>
        <span class="issue-updated-at">
          <i class="glyphicon glyphicon-calendar"></i>
          last updated: {{ issue.updated_at | timeDiff }} ago
        </span>
      </div>

      <div class="issue-description-container">
        <div ng-if="issue.description.length >= issueTruncateLength">
          <p class="issue-description issue-spacing-top">
            {{ issue.description | truncate: issueTruncateLength }}
            <a class="see-more" ng-href="/issues/{{ issue.slug }}">See more</a>
          </p>
        </div>

        <p ng-if="issue.description.length < issueTruncateLength" class="issue-description issue-spacing-top" >
          {{ issue.description }}
        </p>
      </div>


      <div class="issue-etc row">
        <div class="col-sm-3 col-xs-12 issue-comment">
          <i class="fa fa-comments-o icon"></i>
          <a ng-href="/issues/{{ issue.slug }}">{{issue.comment_count}} comments</a>
        </div>
        <div class="col-sm-6 col-xs-12 issue-languages">
          <span class="badge search-filter" ng-repeat="language in issue.tracker.languages | limitTo: 3">
            {{language.name}}
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="issue-bounty">
    <!-- <span class="issue-bounty-text" style="font-size: 10px;">
      Amount
    </span> -->
    <span class="issue-bounty-text">
      {{ issue.bounty_total | dollars:{space:true} }}
    </span>
  </div>

</div>